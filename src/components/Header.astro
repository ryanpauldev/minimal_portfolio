---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import AlienTracker from "@components/AlienTracker";
import { SITE } from "@consts";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between place-items-center">
      <a
        href="/"
        class="flex items-center justify-center w-12 h-12 overflow-hidden"
      >
        <AlienTracker client:load />
      </a>

      <nav class="flex gap-1">
        <Link underline={false} href="/work"> Work </Link>
        <span>
          {""}
        </span>
        <Link underline={false} href="/projects"> Projects </Link>
        <span>
          {""}
        </span>
        <Link underline={false} href="/blog"> Blog </Link>

        <!-- Theme Toggle Button -->
        <button
          id="theme-toggle-button"
          aria-label="Toggle theme"
          class="group px-2 rounded-md transition-colors duration-300 flex items-center justify-center"
        >
          <!-- Light Mode Icon (Sun) - Visible in Dark Mode -->
          <svg
            id="theme-icon-light"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            stroke="yellow-500"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="stroke-yellow-500 fill-yellow-500 group-hover:fill-yellow-300 group-hover:stroke-yellow-200 transition-colors duration-300 ease-in-out hidden"
          >
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>

          <!-- Dark Mode Icon (Moon) - Visible in Light Mode -->
          <svg
            id="theme-icon-dark"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="stroke-current fill-yellow-500 group-hover:fill-yellow-300 group-hover:stroke-black dark:group-hover:fill-yellow-400 dark:group-hover:stroke-white transition-colors duration-300 ease-in-out"
          >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </nav>
    </div>
  </Container>
</header>
