---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "relative group w-fit flex items-center h-10 px-4 flex-nowrap rounded",
    "border border-black/15 dark:border-white/20",
    "hover:bg-cyan-200 dark:hover:bg-zinc-800 hover:text-black dark:hover:text-white",
    "transition-all duration-300 ease-in-out text-sm",
    "glowing-border",
    "text-inherit" /* âœ… Forces inherited text color */,
    underline && "underline underline-offset-2",
  )}
  {...rest}
>
  <slot />
</a>
